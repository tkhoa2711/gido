{
  "node": true,         // Enable global variables when code is running inside NodeJS runtime environment
  "eqeqeq": true,       // Require triple equals i.e. `===`.
  "immed": true,        // Require immediate invocations to be wrapped in parens e.g. `( function(){}() );`
  "quotmark": "single", // Define quotes to string values.
  "undef": true,        // Require all non-global variables to be declared before they are used
  "unused": false,      // Warn about unused variables
  "strict": true,       // Require 'use strict' pragma in every file
  "indent": 2,          // Indentation spacing
  "devel": true,        // Allow development statements such as 'console.log(...)'
  "esversion": 5,       // Specify the ECMAScript version
  "globals": {          // Globals variables.
    "angular": true
  }
}
